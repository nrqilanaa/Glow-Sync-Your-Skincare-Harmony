<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="539dp"
        android:layout_height="984dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841"
        app:srcCompat="@drawable/question" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="305dp"
        android:layout_height="314dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525">

        <Button
            android:id="@+id/button1"
            android:layout_width="219dp"
            android:layout_height="59dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#EAD5E5"
            android:text="Combination Skin"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="219dp"
            android:layout_height="59dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#EAD5E5"
            android:text="Dry Skin"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="219dp"
            android:layout_height="59dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#EAD5E5"
            android:text="Oily Skin"
            android:textColor="#000000"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/whatname"
        android:layout_width="359dp"
        android:layout_height="61dp"
        android:text="After you read these three skin types, what is your skin type?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

</androidx.constraintlayout.widget.ConstraintLayout>